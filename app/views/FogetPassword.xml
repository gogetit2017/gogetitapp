<Alloy>
	<Window id='resetPassword' class="container"   barColor="#f9f9f9" translucent="NO" backgroundColor="#000" title="Reset Password">
		<ActivityIndicator id='actIndicator' height="30dp" width="30dp" message="Loading..."  top="23dp" color="#fff"></ActivityIndicator>
              <!--<Label class='detailLbl' id="detaliLbl">Reset Password</Label>-->
			<ImageView id="logo" height="54dp" width="200dp" top="20dp" backgroundImage="/images/Logo.png"></ImageView>
			<View class="emailView"  id="newPassword" top='100dp'>
				
				<TextField class="txtEmail" hintText=" Enter Email" id="textEmail" textAlign="Titanium.UI.TEXT_ALIGNMENT_LEFT"  color="#000"></TextField>
			</View>
			<Button class="remindBtn" top='38dp' id='ResetPassWord'  onClick="ResetPassword" backgroundColor="#3BB9FF" color="#fff" borderRadius="10dp">Reset Password</Button>
			<Button class="remindBtn" top="30dp"  id='LoginBtn'  backgroundColor="#3BB9FF" color="#fff" borderRadius="10dp" >Back to login</Button>
            </Window>
	
</Alloy>